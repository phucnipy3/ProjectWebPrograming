@model MVC.Models.HomeViewModel
@{
ViewBag.Title = "Home Page";
ViewBag.Active = "#HomeBtn";
}
<div class="container-fluid clip-background bg-white p-0 m-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 order-last order-lg-first">
                <p class="big-header">Ốp lưng thời trang<br />cho riêng bạn</p>
                <p class="smaller-header">Trùng lặp phong cách? Không còn là vấn đề</p>
                <div class="row w-100 m-auto">
                    <div class="col-auto mx-auto mx-lg-0">
                        <a class="btn-pick-your-case text-decoration-none" href="/Product">CHỌN NGAY ỐP LƯNG</a>
                    </div>
                </div>
                
            </div>
            <div class="col-lg-6 order-first order-lg-last">
                <div class="row align-items-center h-100">
                    <div class="col-auto flow-card">
                        <ul class="text-decoration-none group-text">
                                <li><div class="circle-bullet"></div> <span>Bạn là người thích sự duy nhất</span></li>
                                <li><div class="circle-bullet circle-bullet-2"></div> <span>Bạn muốn thiết kế chiếc ốp lưng<br />cho riêng mình?</span></li>
                                <li><div class="circle-bullet"></div> <span>Hãy để chúng tôi giúp bạn. <a href="/Design">Click!</a></span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container no-gutters">
    <div class="row">
        <div class="col-12 p-0 position-relative">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Resource/BANNERR_2048x.png" class=" w-100 d-block" alt="SlideShow Pictures">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Resource/PHONE-BANNER_2000x.png" class="w-100 d-block" alt="SlideShow Pictures">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Resource/phone-case-banner.jpg" class="d-block w-100" alt="SlideShow Pictures">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Resource/phone-cases-banner_1024x1024.gif" class="d-block w-100" alt="SlideShow Pictures">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
            
        </div>
    </div>
</div>
<div class="container px-0">
    <div class="container container-recommend">
        <div class="row w-100 pr-0">
            <a href="#" class="text-decoration-none"><h2 class="pl-4 pt-3 text-recommend">Ốp lưng đề cử</h2></a>
            <div class="ml-auto col-auto align-self-end pr-0">

                <a href="/Product/Index?metaTitle=Best-Saler" class="text-decoration-none text-recommend float-right">Click to check it out! <i class="fas fa-angle-right"></i></a>
            </div>
        </div>
        <div class="row mx-auto my-auto py-3">
            <div class="col-12 overflow-hidden p-0 w-100 image-on-home">
                <div id="carouselRecommend" class="carousel slide w-100 multi-item-carousel p-0 row m-0" data-ride="carousel">
                    <div class="carousel-inner " role="listbox">
                        <div class="carousel-item active">
                            <div class="col-6 col-sm-4 col-md-3 col-lg-3 col-xl-2 d-block float-left">
                                <a href="/Product/Detail/@Model.ListBestSaler[0].ProductID">
                                    <img src="@Url.Content("~/"+Model.ListBestSaler[0].ImageLink)" alt="Alternate Text" class="image-on-home d-block img-fluid m-auto" />
                                </a>    
                            </div>
                        </div>
                        @for (int i = 1; i < Model.ListBestSaler.Count; i++)
                        {
                            <div class="carousel-item ">
                                <div class="col-6 col-sm-4 col-md-3 col-lg-3 col-xl-2 d-block float-left">
                                    <a href="/Product/Detail/@Model.ListBestSaler[i].ProductID">
                                        <img src="@Url.Content("~/"+Model.ListBestSaler[i].ImageLink)" alt="Alternate Text" class="image-on-home d-block img-fluid m-auto" />
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselRecommend" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselRecommend" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="container container-lasted">
        <div class="row w-100 pr-0">
            <a href="#" class="text-decoration-none"><h2 class="pl-4 pt-3 text-lasted">Ốp lưng mới nhất!</h2></a>
            <div class="ml-auto col-auto align-self-end pr-0">

                <a href="/Product/Index?metaTitle=Lasted" class="text-decoration-none text-lasted float-right">Click to check it out! <i class="fas fa-angle-right"></i></a>
            </div>
        </div>
        <div class="row mx-auto my-auto py-3">
            <div class="col-12 overflow-hidden p-0 w-100 image-on-home">
                <div id="carouselLasted" class="carousel slide w-100 multi-item-carousel p-0 row m-0" data-ride="carousel">
                    <div class="carousel-inner " role="listbox">
                        <div class="carousel-item active">
                            <div class="col-6 col-sm-4 col-md-3 col-lg-3 col-xl-2 d-block float-left">
                                <a href="/Product/Detail/@Model.ListNew[0].ProductID">
                                    <img src="@Url.Content("~/"+Model.ListNew[0].ImageLink)" alt="Alternate Text" class="image-on-home d-block img-fluid m-auto" />
                                </a>
                            </div>
                        </div>
                        @for (int i = 1; i < Model.ListNew.Count; i++)
                        {
                            <div class="carousel-item ">
                                <div class="col-6 col-sm-4 col-md-3 col-lg-3 col-xl-2 d-block float-left">
                                    <a href="/Product/Detail/@Model.ListNew[i].ProductID">
                                        <img src="@Url.Content("~/"+Model.ListNew[i].ImageLink)" alt="Alternate Text" class="image-on-home d-block img-fluid m-auto" />
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselLasted" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselLasted" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container pt-5">
    <div class="row">
        <div class="col-12 col-sm-6 col-lg-3">
            <img src="~/Resource/support.png" alt="Support" class="rounded-circle mx-auto d-block" width="100px" height="100px"/>
            <h5 class="text-center my-3 text-info">CHĂM SÓC KHÁCH HÀNG</h5>
            <p class="text-justify">Luôn có nhân viên online thức trực 24/7 để hỗ trợ tận tình trước-trong-sau khi mua hàng. Đội ngũ chăm sóc khách hàng không ngừng nỗ lực để trở thành bạn đồng hành đáng tin cậy của khách hàng với tiêu chí phục vụ khách hàng là Thượng đế</p>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
