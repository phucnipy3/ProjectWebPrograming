@model MVC.Models.ProductDetail
@using (Html.BeginForm("Add", "ProductDetails", FormMethod.Post, new { id = "formAdd" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true, "", new { @class = "alert-danger" });

    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputUserIDSU">Product ID</label>
                @Html.TextBoxFor(model => model.ProductID, new { @class = "form-control", id = "InputUserIDSU", placeholder = "Enter product's id" })
                @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputUserIDSU">Product Category ID</label>
                @Html.TextBoxFor(model => model.ProductCategoryID, new { @class = "form-control", id = "InputUserIDSU", placeholder = "Enter product category's id" })
                @Html.ValidationMessageFor(model => model.ProductCategoryID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-5 offset-6">
            <button type="submit" class="btn btn-primary">Add</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
    </div>
}