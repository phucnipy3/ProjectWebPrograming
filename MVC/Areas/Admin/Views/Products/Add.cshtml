@model MVC.Models.Product
@using (Html.BeginForm("Add", "Products", FormMethod.Post, new { id = "formAdd" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true, "", new { @class = "alert-danger" });

    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputUserIDSU">Product Name</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "InputUserIDSU", placeholder = "Enter name" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputPasswordAU">Author</label>
                @Html.TextBoxFor(model => model.Author, new { @class = "form-control", id = "InputPasswordAU", placeholder = "Enter author" })
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputEmailAU">Image</label>
                @Html.TextBoxFor(model => model.Image, new {@class = "form-control", id = "InputNameAU" })
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputPhoneAU">Price</label>
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", id = "InputPhoneAU", placeholder = "Enter price" })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputEmailEU">Promotion Price</label>
                @Html.TextBoxFor(model => model.PromotionPrice, new { @class = "form-control", id = "InputEmailEU", placeholder = "Enter promotion price" })
                @Html.ValidationMessageFor(model => model.PromotionPrice, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputAddressEU">Included VAT</label>
                @Html.TextBoxFor(model => model.IncludedVAT, new { @class = "form-control", id = "InputAddressEU" })
                @Html.ValidationMessageFor(model => model.IncludedVAT, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputEmailEU">Quantity</label>
                @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", id = "InputEmailEU", placeholder = "Enter quantity" })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputEmailEU">Detail</label>
                @Html.TextAreaFor(model => model.Detail, new { @class = "form-control", id = "InputEmailEU", placeholder = "Enter detail" })
                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputEmailEU">Warranty</label>
                @Html.TextBoxFor(model => model.Warranty, new { @class = "form-control", id = "InputEmailEU", placeholder = "Enter warranty policy " })
                @Html.ValidationMessageFor(model => model.Warranty, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-5 offset-6">
            <button type="submit" class="btn btn-primary">Add</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
    </div>
}