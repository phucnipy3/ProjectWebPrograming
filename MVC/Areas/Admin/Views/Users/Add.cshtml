@model MVC.Models.User
@using (Html.BeginForm("Add", "Users", FormMethod.Post, new { id = "formAdd" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true, "", new { @class = "alert-danger" });

    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputUserIDSU">User ID</label>
                @Html.TextBoxFor(model => model.UserID, new { @class = "form-control", id = "InputUserIDSU", placeholder = "Enter user ID" })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputPasswordAU">Password</label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "InputPasswordAU", placeholder = "Enter password" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputEmailAU">Full name</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", id = "InputNameAU", placeholder = "Enter full name" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputPhoneAU">Phone number</label>
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", id = "InputPhoneAU", placeholder = "Enter phone number" })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-2 offset-2">
            <label>Sex: </label>
        </div>
        <div class="form-check form-check-inline">
            @Html.RadioButtonFor(model => model.Sex, "Male", new { id = "MaleRadio", @checked = true })
            <label class="form-check-label" for="MaleRadio">
                Male
            </label>
        </div>
        <div class="form-check form-check-inline">
            @Html.RadioButtonFor(model => model.Sex, "Female", new { id = "FemaleRadio" })
            <label class="form-check-label" for="FemaleRadio">
                Female
            </label>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputEmailEU">Email address</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "InputEmailEU", placeholder = "Enter email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputAddressEU">Address</label>
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", id = "InputAddressEU", placeholder = "Enter address" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="form-group">
                <label for="InputAddressEU">Role</label>
                @Html.TextBoxFor(model => model.Role, new { @class = "form-control", id = "InputAddressEU", placeholder = "Customer or Employee?" })
                @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>




    <div class="row">
        <div class="col-5 offset-6">
            <button type="submit" class="btn btn-primary">Add</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
    </div>
}